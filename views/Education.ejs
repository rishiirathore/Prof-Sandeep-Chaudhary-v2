  <script>
    // Enhanced animation for the qualification items
    document.addEventListener("DOMContentLoaded", function () {
      const eduItems = document.querySelectorAll(".edu-item");

      // Improved function to check if an element is in viewport with offset
      function isInViewport(element, offset = 100) {
        const rect = element.getBoundingClientRect();
        return (
          rect.top <= (window.innerHeight || document.documentElement.clientHeight) - offset &&
          rect.bottom >= offset &&
          rect.left >= 0 &&
          rect.right <= (window.innerWidth || document.documentElement.clientWidth)
        );
      }

      // Function to handle the animation
      function handleScroll() {
        eduItems.forEach((item, index) => {
          if (isInViewport(item) && !item.classList.contains("animated")) {
            item.style.opacity = "0";
            item.style.transform = "translateY(40px)";
            item.classList.add("animated");

            // Staggered animation delay
            setTimeout(() => {
              item.style.transition = "opacity 0.5s ease, transform 0.5s ease";
              item.style.opacity = "1";
              item.style.transform = "translateY(0)";
            }, 150 * index);
          }
        });
      }

      // Set initial state
      eduItems.forEach((item) => {
        item.style.opacity = "0";
        item.style.transform = "translateY(40px)";
      });

      // Add scroll event listener with debounce
      let scrollTimeout;
      window.addEventListener("scroll", function () {
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(handleScroll, 10);
      });

      // Handle initial view
      setTimeout(handleScroll, 300);

      // Add image hover effects
      const eduImages = document.querySelectorAll(".edu-image-container");
      eduImages.forEach((container) => {
        container.addEventListener("mouseenter", function () {
          this.querySelector(".edu-image").style.transform = "scale(1.05)";
        });

        container.addEventListener("mouseleave", function () {
          this.querySelector(".edu-image").style.transform = "scale(1)";
        });
      });
    });
  </script>
