<!-- Additional CSS for the page -->
<style>
  /* Global CSS Variables */
  :root {
    --primary-color: #5ab9a8;
    --secondary-bg: #f4f4f4;
    --text-color: #333;
    --card-bg: #ffffff;
  }

  /* Dark Mode Variables */
  :root.dark-mode {
    --primary-color: #5ab9a8;
    --secondary-bg: #2c2c2c;
    --text-color: #e0e0e0;
    --card-bg: #3a3a3a;
  }

  /* Reset and Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Arial", sans-serif;
    line-height: 1.6;
    background-color: var(--secondary-bg);
    color: var(--text-color);
  }

  .container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Responsive Typography */
  h1,
  h2,
  h3 {
    margin-bottom: 15px;
  }

  /* Moving Bulletin Styles */
  .moving-bulletin {
    background-color: var(--primary-color);
    color: white;
    padding: 10px 0;
    overflow: hidden;
    position: relative;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .bulletin-content {
    display: flex;
    white-space: nowrap;
    animation: move-left 25s linear infinite;
    padding-right: 100%;
    font-size: 1rem;
  }

  @keyframes move-left {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Hero Image Section */
  .hero-image {
    height: 400px;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: center;
  }

  .hero-image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/images/WhatsApp\ Image\ 2025-03-24\ at\ 3.12.32\ PM.jpeg");
    background-size: cover;
    background-position: center;
    opacity: 0.5;
  }

  /* Light mode overlay adjustment */
  :root:not(.dark-mode) .hero-image::before {
    opacity: 0.8;
    filter: brightness(0.7) contrast(1.2);
  }

  /* Dark mode overlay adjustment */
  :root.dark-mode .hero-image::before,
  .dark-mode .hero-image::before {
    opacity: 0.5;
  }

  .hero-text {
    position: relative;
    color: #fff;
    text-align: center;
    width: 100%;
  }

  .hero-text h1 {
    font-size: 4rem;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .hero-text p {
    font-size: 1.5rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  /* Section Styling */
  .section {
    margin-bottom: 60px;
  }

  /* Highlight the abbreviation */
  .highlight {
    color: var(--primary-color);
    font-weight: bold;
  }

  /* Two Column Layout */
  .two-column-layout {
    display: flex;
    gap: 30px;
    margin-bottom: 40px;
  }

  .about-score-section,
  .about-pi-section {
    flex: 1;
    padding: 25px;
    background-color: var(--secondary-bg);
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  /* Principal Investigator Profile */
  .pi-profile {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-top: 15px;
  }

  .pi-img img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--primary-color);
  }

  .pi-info h3 {
    color: var(--primary-color);
    margin-bottom: 10px;
  }
  .pi_more:hover {
    color: blue;
  }

  /* Mission and Vision Sections */
  .mission,
  .vision {
    flex: 1;
    background-color: var(--secondary-bg);
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
  }

  .mission h3,
  .vision h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
  }

  /* SDG Inline Tags */
  .sdg-inline-tags {
    display: inline-flex;
    gap: 10px;
    font-weight: bold;
  }

  .sdg-inline-tags .sdg-tag {
    background-color: rgba(0, 0, 0, 0.1);
    padding: 5px 10px;
    border-radius: 50%;
    font-size: 0.9rem;
    width: 55px;
    height: auto;
  }

  /* SDG Icons Section */
  .sdg-icons {
    display: flex;
    gap: 15px;
    margin-top: 15px;
    flex-wrap: wrap;
    justify-content: flex-start;
  }

  .sdg-tag {
    width: 120px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    text-align: center;
    position: relative;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .sdg-tag:hover {
    transform: scale(1.1);
  }

  .sdg-tag[data-sdg="9"] {
    background-color: var(--primary-color);
  }

  .sdg-tag[data-sdg="11"] {
    background-color: var(--primary-color);
  }

  .sdg-tag[data-sdg="12"] {
    background-color: var(--primary-color);
  }

  .sdg-icon {
    width: 100%;
    height: auto;
  }

  .sdg-tooltip {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 0.8rem;
    width: max-content;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  .sdg-tag:hover .sdg-tooltip {
    opacity: 1;
  }

  /* Responsive Media Queries */
  @media (max-width: 992px) {
    .two-column-layout {
      flex-direction: column;
      gap: 20px;
    }

    .about-score-section,
    .about-pi-section,
    .mission,
    .vision {
      width: 100%;
    }

    .pi-profile {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }

    .pi-img {
      margin-bottom: 15px;
    }

    .sdg-inline-tags {
      justify-content: center;
      margin-top: 10px;
    }

    .sdg-icons {
      justify-content: center;
    }

    .sdg-tag {
      width: 100px;
      height: 80px;
    }
  }

  @media (max-width: 768px) {
    .hero-text h1 {
      font-size: 3rem;
    }

    .hero-text p {
      font-size: 1.2rem;
    }

    .pi-img img {
      width: 80px;
      height: 80px;
    }

    .pi-profile {
      gap: 15px;
    }

    .sdg-tag {
      width: 80px;
      height: 70px;
    }

    .sdg-inline-tags .sdg-tag {
      width: 40px;
      height: 40px;
      font-size: 0.7rem;
    }
  }

  @media (max-width: 576px) {
    .hero-image {
      height: 300px;
    }

    .hero-text h1 {
      font-size: 2.5rem;
    }

    .hero-text p {
      font-size: 1rem;
    }

    .pi-img img {
      width: 70px;
      height: 70px;
    }

    .mission p,
    .vision p {
      font-size: 0.9rem;
    }

    .sdg-icons {
      gap: 10px;
    }

    .sdg-tag {
      width: 70px;
      height: 60px;
    }

    .sdg-inline-tags .sdg-tag {
      width: 35px;
      height: 35px;
      font-size: 0.6rem;
    }
  }

  @media (max-width: 480px) {
    /* Reset any potentially problematic margins */
    body,
    html {
      margin: 0;
      padding: 0;
      overflow-x: hidden; /* Prevent horizontal scrolling */
    }
    .container {
      /* Force full width */
      padding: 0 10px;
      box-sizing: border-box; /* Ensure padding is included in width */
    }

    .hero-text h1 {
      font-size: 2rem;
    }

    .hero-text p {
      font-size: 0.9rem;
    }

    .mission h3,
    .vision h3 {
      font-size: 1.2rem;
    }

    .sdg-tag {
      width: 60px;
      height: 50px;
    }
  }

  :root {
    --primary-color: #5ab9a8;
    --secondary-bg: #f9f9f9;
  }

  /* Hexagon Research Areas - Desktop View (Unchanged) */
  .research-areas-section {
    margin-bottom: 60px;
  }

  .hexagon-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
    margin-top: 40px;
  }

  .hexagon-item {
    width: 220px;
    height: 250px;
    position: relative;
    margin: 15px 0;
    cursor: pointer;
  }

  .hexagon-content {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--secondary-bg);
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 30px 20px;
    text-align: center;
    transition: transform 0.3s ease, background-color 0.3s;
    position: relative;
    overflow: hidden;
  }

  .hexagon-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0.4;
  }

  .hexagon-item:hover .hexagon-content {
    background-color: var(--primary-color);
    transform: translateY(-10px);
  }

  .hexagon-icon {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 15px;
    transition: color 0.3s;
    position: relative;
  }

  .hexagon-item:hover .hexagon-icon {
    color: white;
  }

  .hexagon-content h3 {
    font-size: 1.1rem;
    margin-bottom: 10px;
    transition: color 0.3s;
    position: relative;
  }

  .description {
    font-size: 0.85rem;
    opacity: 0;
    max-height: 0;
    transition: opacity 0.3s, max-height 0.3s;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    padding: 5px;
    border-radius: 5px;
    position: relative;
  }

  .hexagon-item.active .description {
    opacity: 1;
    max-height: 100px;
  }

  /* Upload Page Styles - Desktop View (Unchanged) */
  .upload-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40px 20px;
    background-color: var(--secondary-bg);
  }

  .upload-box {
    width: 100%;
    max-width: 600px;
    background-color: #333;
    border-radius: 10px;
    padding: 30px;
    text-align: center;
  }

  .upload-icon {
    font-size: 3rem;
    color: var(--primary-color);
    margin-bottom: 20px;
  }

  .upload-input {
    display: none;
  }

  .upload-label {
    display: inline-block;
    padding: 10px 20px;
    background-color: var(--primary-color);
    color: white;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .upload-label:hover {
    background-color: #4a9e8f;
  }

  .file-name {
    margin-top: 15px;
    color: #aaa;
  }

  /* Modal Styles - Desktop View (Unchanged) */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    align-items: center;
    justify-content: center;
  }

  .modal-content {
    background: #222;
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    width: 50%;
    color: white;
    position: relative;
  }

  .modal-content img {
    max-height: 250px;
    max-width: 100%;
    object-fit: contain;
  }

  .close {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 24px;
    cursor: pointer;
    color: white;
  }

