<style>

.contact-page {
    background: linear-gradient(135deg, var(--background-color) 0%, 100%);
    min-height: 100vh;
    padding: 4rem 0;
    font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

.section {
    margin-bottom: 4rem;
    padding: 3rem 0;
    background-color: var(--secondary-bg);
    border-radius: 12px;
    box-shadow: var(--soft-shadow);
    transition: var(--transition);
}

.section:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
}

.section-title {
    text-align: center;
    margin-bottom: 2.5rem;
    color: var(--primary-color);
    font-size: 2.75rem;
    font-weight: 700;
    position: relative;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.section-title::before,
.section-title::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--primary-color);
}

.section-title::before {
    width: 120px;
    height: 4px;
    opacity: 0.3;
}

.section-title::after {
    width: 60px;
    height: 6px;
}

.contact-card {
    background-color: var(--secondary-bg);
    border-radius: 15px;
    padding: 2.5rem;
    box-shadow: var(--soft-shadow);
    border-left: 5px solid var(--primary-color);
    transition: var(--transition);
}

.contact-card:hover {
    transform: scale(1.02);
}

.contact-details h2 {
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
    font-weight: 600;
}

.contact-location {
    color: var(--text-color);
    margin-bottom: 1.5rem;
    line-height: 1.8;
}

.contact-methods {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.contact-methods p {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-color);
}

.contact-methods i {
    color: var(--secondary-color);
    font-size: 1.2rem;
}

.contact-methods a {
    color: var(--primary-color);
    text-decoration: none;
    transition: var(--transition);
}

.contact-methods a:hover {
    color: var(--accent-color);
    text-decoration: underline;
}

@media screen and (max-width: 768px) {
    .contact-page {
        padding: 2rem 0;
    }

    .section-title {
        font-size: 2.25rem;
    }

    .contact-card {
        padding: 1.5rem;
    }

    .contact-methods {
        flex-direction: column;
    }
}

@media screen and (max-width: 480px) {
    .section-title {
        font-size: 1.8rem;
    }

    .contact-card {
        padding: 1rem;
    }
}
</style>
